@model BookApp.Models.User

@{
    ViewData["Title"] = "Radera";
}

<h2>Radera</h2>
<h3 class="mt-3">Användare</h3>
<hr />
<div>
    <h4 class="mb-4">Är du säker på att du vill ta bort denna användare?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4 mb-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="mybtn max-w-btn btn btn-danger"><i class="bi bi-trash"></i> Radera användare</button>
    </form>

    <div>
        <a asp-action="Index" class="mybtn max-w-btn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till listan</a>
    </div>
</div>
