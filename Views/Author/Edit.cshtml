@model BookApp.Models.Author

@{
    ViewData["Title"] = "Ändra";
}

<h2>Ändra</h2>

<h3 class="mt-3">Författare</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold mb-1"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="mybtn btn btn-primary"><i class="bi bi-check-circle"></i> Spara
                    ändringar</button>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="mybtn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
