@model BookApp.Models.Loan

@{
    ViewData["Title"] = "Radera";

    // Variabel för att hantera om det finns en boktitel eller inte
    string bookTitle = Model.Book != null ? Model.Book.Title : "Ingen bok";

    // Variabel för att hantera om det finns en e-postadress eller inte
    string userEmail = Model.User != null ? Model.User.Email : "Ingen användare";
}

<h2>Radera</h2>
<h3 class="mt-3">Boklån</h3>
<hr />
<div>
    <h4 class="mb-4">Är du säker på att du vill ta bort detta boklån?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @bookTitle
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @userEmail
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4 mb-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="mybtn max-w-btn btn btn-danger"><i class="bi bi-trash"></i> Radera boklån</button>
    </form>

    <div>
        <a asp-action="Index" class="mybtn max-w-btn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till listan</a>
    </div>
</div>
