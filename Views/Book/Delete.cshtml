@model BookApp.Models.Book

@{
    ViewData["Title"] = "Radera";

    // Variabel för att hantera om det finns en författare eller inte
    string authorName = Model.Author != null ? Model.Author.Name : "Ingen författare";
}

<h2>Radera</h2>
<h3 class="mt-3">Bok</h3>
<hr />
<div>
    <h4 class="mb-4">Är du säker på att du vill ta bort denna bok?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @authorName
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4 mb-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="mybtn max-w-btn btn btn-danger"><i class="bi bi-trash"></i> Radera bok</button>
    </form>

    <div>
        <a asp-action="Index" class="mybtn max-w-btn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till listan</a>
    </div>
</div>
