@model BookApp.Models.Book

@{
    ViewData["Title"] = "Detaljer";

    // Variabel för att hantera om det finns en författare eller inte
    string authorName = Model.Author != null ? Model.Author.Name : "Ingen författare";
}

<h2>Detaljer</h2>

<div>
    <h3 class="mt-3">Bok</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicationYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @authorName
        </dd>
    </dl>
</div>
<div class="mb-4 mt-4">
    <a asp-action="Edit" class="mybtn max-w-btn btn btn-warning" asp-route-id="@Model?.Id"><i class="bi bi-pencil-square"></i> Ändra bok</a>
</div>
<div>
    <a asp-action="Index" class="mybtn max-w-btn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till lista</a>
</div>
