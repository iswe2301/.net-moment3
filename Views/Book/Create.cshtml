@model BookApp.Models.Book

@{
    ViewData["Title"] = "Lägg till bok";
}

<h2>Lägg till</h2>

<h3 class="mt-3">Bok</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label fw-bold mb-1"></label>
                <input asp-for="Title" class="form-control" placeholder="Ange bokens titel" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PublicationYear" class="control-label fw-bold mb-1"></label>
                <input asp-for="PublicationYear" class="form-control" placeholder="Ange utgivningsår" />
                <span asp-validation-for="PublicationYear" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AuthorId" class="control-label fw-bold mb-1"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId">
                    <option value="">-- Välj författare --</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="mybtn btn btn-primary"><i class="bi bi-plus-circle"></i> Lägg till bok</button>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="mybtn btn btn-secondary"><i class="bi bi-arrow-left"></i> Tillbaka till lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
